<ol reversed class="postlist">

{% for post in postlist | reverse %}

  <li class="mb-6 postlist-item sm:grid sm:grid-cols-5 md:grid-cols-3 sm:gap-x-6 md:gap-x-8">

    {% if post.coverImage %}
    <a href="{{ post.url | url }}" class="mb-4 sm:col-span-2 md:col-span-1 sm:mb-0">
      {% Figure {
        image: post.coverImage.src,
        alt: post.coverImage.alt,
        size: "onethird"
      } %}
    </a>
    {% endif %}

    <div class="sm:col-span-3 md:col-span-2">
      <a href="{{ post.url | url }}" class="block text-3xl font-display hover:underline focus:underline">{{ post.data.title }}</a>

      {% if post.data.description %}<p class="postlist__description">{{ post.data.description }}</p>{% endif %}
      <time class="block text-lg text-gray-600 postlist-date" datetime="{{ post.date | machineDate }}">{{ post.date | readableDate }}</time>

      {% for tag in post.data.tags %}
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <a href="{{ tagUrl }}" class="tag">{{ tag }}</a>
      {% endfor %}
    </div>

  </li>

{% endfor %}

</ol>
